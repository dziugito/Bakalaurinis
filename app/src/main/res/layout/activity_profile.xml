<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <Button
        android:id="@+id/registruotiAuto"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Registruoti automobilį"
        android:background="@drawable/mybutton"/>

    <Button
        android:id="@+id/manoAuto"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:layout_below="@id/registruotiAuto"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Mano automobiliai"
        android:background="@drawable/mybutton"/>

    <Button
        android:id="@+id/manoIvykiai"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:layout_below="@id/manoAuto"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Mano įvykiai"
        android:background="@drawable/mybutton"/>

</RelativeLayout>